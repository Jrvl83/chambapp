rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {

    // Fotos de perfil - usuarios autenticados pueden subir su propia foto
    match /perfiles/{userId}/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Portfolio de trabajadores
    match /portfolios/{userId}/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Fotos de ofertas - cualquier usuario autenticado puede subir
    match /ofertas/{ofertaId}/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }

  }
}
